<body>

    <header>
        Единый реестр пользователей юридических услуг
    </header>

    <section class="info">
        <p>Мы сотрудничаем со странами Азии, предоставляя качественные юридические услуги.</p>
    </section>

    <section class="search-section">
        <label for="search">Поиск по имени и фамилии:</label>
        <input type="text" id="search" placeholder="Введите имя или фамилию">
        <button onclick="searchUser()">Найти</button>
    </section>

    <section class="clients-table">
        <table>
            <thead>
                <tr>
                    <th>ФИО</th>
                    <th>Телефон</th>
                </tr>
            </thead>
            <tbody id="clientList">
                <!-- Клиенты будут динамически добавляться сюда -->
            </tbody>
        </table>
    </section>

    <footer>
        <p>&copy; 2024 Единый реестр пользователей юридических услуг. Все права защищены.</p>
    </footer>

    <script>
        const clients = [
            {name: "О.А. Сагатбаев", phone: "+7 777 *** **12"},
            {name: "О.Е. Ахметов", phone: "+7 701 *** **45"},
            {name: "О.И. Казыбеков", phone: "+996 555 *** **23"},
            {name: "О.М. Нурланов", phone: "+996 770 *** **98"},
            // Добавьте еще имена, чтобы было больше 567 клиентов
        ];

        function displayClients(clients) {
            const clientList = document.getElementById('clientList');
            clientList.innerHTML = '';

            clients.forEach(client => {
                const row = document.createElement('tr');
                const nameCell = document.createElement('td');
                const phoneCell = document.createElement('td');

                nameCell.textContent = client.name;
                phoneCell.textContent = client.phone;

                row.appendChild(nameCell);
                row.appendChild(phoneCell);
                clientList.appendChild(row);
            });
        }

        function searchUser() {
            const searchQuery = document.getElementById('search').value.toLowerCase();
            const filteredClients = clients.filter(client =>
                client.name.toLowerCase().includes(searchQuery)
            );
            displayClients(filteredClients);
        }

        // Отображаем всех клиентов при загрузке страницы
        displayClients(clients);
    </script>

